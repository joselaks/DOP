<Window
    x:Class="DataObra.Datos.Conectores"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DataObra.Datos"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Title="Conectores"
    Width="800"
    Height="650"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <TextBlock Margin="10,6,10,3" TextAlignment="Center">Usuarios</TextBlock>
        <TextBlock
            Grid.Row="1"
            Margin="10,6,10,3"
            TextAlignment="Center">
            Documentos
        </TextBlock>
        <TextBlock
            Grid.Row="2"
            Margin="10,6,10,3"
            TextAlignment="Center">
            DocumentoRelc
        </TextBlock>
        <TextBlock
            Grid.Row="3"
            Margin="10,6,10,3"
            TextAlignment="Center">
            Agrupadores
        </TextBlock>
        <TextBlock
            Grid.Row="4"
            Margin="10,6,10,3"
            TextAlignment="Center">
            DocumentoDet
        </TextBlock>
        <TextBlock
            Grid.Row="5"
            Margin="10,6,10,3"
            TextAlignment="Center">
            Presupuestos
        </TextBlock>
        <TextBlock
            Grid.Row="6"
            Margin="10,6,10,3"
            TextAlignment="Center">
            Movimientos
        </TextBlock>
        <TextBlock
            Grid.Row="7"
            Margin="10,6,10,3"
            TextAlignment="Center">
            Impuestos
        </TextBlock>
        <StackPanel
            Grid.Column="1"
            Height="30"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Button
                x:Name="veriUsu"
                Width="90"
                Margin="3,3,3,3"
                Click="veriUsu_Click"
                Content="Verifica" />
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Height="30"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Button
                x:Name="nuevoDoc"
                Width="90"
                Margin="3,3,3,3"
                Click="nuevoDoc_Click"
                Content="Nuevo" />
            <Button
                x:Name="borraDoc"
                Width="90"
                Margin="3,3,3,3"
                Click="borraDoc_Click"
                Content="Borra" />
            <Button
                x:Name="editaDoc"
                Width="90"
                Margin="3,3,3,3"
                Click="editaDoc_Click"
                Content="Edita" />
            <Button
                x:Name="buscaCuentaDoc"
                Width="90"
                Margin="3,3,3,3"
                Click="buscaCuentaDoc_Click"
                Content="Busca p/cuenta" />
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Grid.Column="1"
            Height="30"
            VerticalAlignment="Center"
            IsEnabled="False"
            Orientation="Horizontal">
            <Button
                x:Name="nuevoDocRel"
                Width="90"
                Margin="3,3,3,3"
                Content="Nuevo" />
            <Button
                x:Name="borraDocRel"
                Width="90"
                Margin="3,3,3,3"
                Content="Borrar" />
            <Button
                x:Name="buscaDocRel"
                Width="90"
                Margin="3,3,3,3"
                Content="Busca por sup" />
        </StackPanel>
        <StackPanel
            Grid.Row="3"
            Grid.Column="1"
            Height="30"
            VerticalAlignment="Center"
            
            Orientation="Horizontal">
            <Button
                x:Name="nuevoAgrupador"
                Width="90"
                Margin="3,3,3,3"
                Content="Nuevo" IsEnabled="True" Click="nuevoAgrupador_Click"/>
            <Button
                x:Name="borrarrAgrupador"
                Width="90"
                Margin="3,3,3,3"
                Content="Borrar" Click="borrarrAgrupador_Click" />
            <Button
     x:Name="editaAgrup"
     Width="90"
     Margin="3,3,3,3"
    
     Content="Edita" Click="editaAgrup_Click"  />
            <Button
                x:Name="obtenerAgrupador"
                Width="90"
                Margin="3,3,3,3"
                Content="Buscar p/cuenta" Click="obtenerAgrupador_Click"/>
        </StackPanel>
        <StackPanel
            Grid.Row="4"
            Grid.Column="1"
            Height="30"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Button
                x:Name="obtenerDocDet"
                Width="90"
                Margin="3,3,3,3"
                Click="obtenerDocDet_Click"
                Content="Obtener" />
            <Button
                x:Name="ProcesaLoteDet"
                Width="90"
                Margin="3,3,3,3"
                Click="ProcesaLoteDet_Click"
                Content="Procesa Lote" />
        </StackPanel>
        <StackPanel
            Grid.Row="6"
            Grid.Column="1"
            Height="30"
            VerticalAlignment="Center"
            
            Orientation="Horizontal">
            <Button
                x:Name="obtenerMovimientos"
                Width="90"
                Margin="3,3,3,3"
                Content="Obtener" Click="obtenerMovimientos_Click" />
            <Button
                x:Name="ProcesaLoteMov"
                Width="90"
                Margin="3,3,3,3"
                Content="Procesa Lote" Click="ProcesaLoteMov_Click" />
        </StackPanel>
        <StackPanel
            Grid.Row="7"
            Grid.Column="1"
            Height="30"
            VerticalAlignment="Center"
            
            Orientation="Horizontal">
            <Button
                x:Name="obtenerImpuestos"
                Width="90"
                Margin="3,3,3,3"
                Content="Obtener" Click="obtenerImpuestos_Click" />
            <Button
                x:Name="ProcesaLoteImp"
                Width="90"
                Margin="3,3,3,3"
                Content="Procesa Lote" Click="ProcesaLoteImp_Click" />
        </StackPanel>
        <StackPanel
            Grid.Row="5"
            Grid.Column="1"
            Height="30"
            VerticalAlignment="Center"
            IsEnabled="False"
            Orientation="Horizontal">
            <Button
                x:Name="obtenerDetallePres"
                Width="90"
                Margin="3,3,3,3"
                Content="Obtener" />
            <Button
                x:Name="ProcesaDetallePres"
                Width="90"
                Margin="3,3,3,3"
                Content="Procesa Lote" />
        </StackPanel>
        <syncfusion:TabControlExt Grid.Row="8" Grid.ColumnSpan="2">
            <syncfusion:TabItemExt Header="Listado">
                <ListBox
                    x:Name="LogListBox"
                    Margin="2"
                    Background="Beige" />


            </syncfusion:TabItemExt>
        </syncfusion:TabControlExt>

        <Button
            x:Name="limpiaLogin"
            Grid.Row="9"
            Grid.Column="1"
            Width="90"
            Margin="3,3,3,3"
            Click="limpiaLogin_Click"
            Content="Borrar login" />
    </Grid>
</Window>
