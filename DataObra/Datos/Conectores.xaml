<Window xmlns:syncfusion="http://schemas.syncfusion.com/wpf"  x:Class="DataObra.Datos.Conectores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataObra.Datos"
        mc:Ignorable="d"
        Title="Conectores" Height="650" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBlock TextAlignment="Center" Margin="10,6,10,3">Usuarios</TextBlock>
        <TextBlock TextAlignment="Center" Margin="10,6,10,3" Grid.Row="1" >Documentos</TextBlock>
        <TextBlock TextAlignment="Center" Margin="10,6,10,3" Grid.Row="2" >DocumentoRelc</TextBlock>
        <TextBlock TextAlignment="Center" Margin="10,6,10,3" Grid.Row="3" >Agrupadores</TextBlock>
        <TextBlock TextAlignment="Center" Margin="10,6,10,3" Grid.Row="4" >DocumentoDet</TextBlock>
        <TextBlock TextAlignment="Center" Margin="10,6,10,3" Grid.Row="5" >Presupuestos</TextBlock>
        <TextBlock TextAlignment="Center" Margin="10,6,10,3" Grid.Row="6" >Movimientos</TextBlock>
        <TextBlock TextAlignment="Center" Margin="10,6,10,3" Grid.Row="7" >Impuestos</TextBlock>
        <StackPanel Orientation="Horizontal" Height="30" VerticalAlignment="Center" Grid.Column="1">
            <Button Content="Verifica" Margin="3,3,3,3" Width="90" x:Name="veriUsu" Click="veriUsu_Click" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="30" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1">
            <Button Content="Nuevo" Margin="3,3,3,3" Width="90" x:Name="nuevoDoc" Click="nuevoDoc_Click"/>
            <Button Content="Borra" Margin="3,3,3,3" Width="90" x:Name="borraDoc" Click="borraDoc_Click" />
            <Button Content="Edita" Margin="3,3,3,3" Width="90" x:Name="editaDoc" Click="editaDoc_Click" />
            <Button Content="Busca p/ID" Margin="3,3,3,3" Width="90" x:Name="buscaIDDoc" Click="buscaIDDoc_Click" />
            <Button Content="Busca p/cuenta" Margin="3,3,3,3" Width="90" x:Name="buscaCuentaDoc" Click="buscaCuentaDoc_Click" />
            <Button Content="Procesar" Margin="3,3,3,3" Width="90" x:Name="ProcesarDoc" Click="ProcesarDoc_Click" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="30" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1">
            <Button Content="Nuevo" Margin="3,3,3,3" Width="90" x:Name="nuevoDocRel" Click="nuevoDocRel_Click"/>
            <Button Content="Borrar" Margin="3,3,3,3" Width="90" x:Name="borraDocRel" Click="borraDocRel_Click"/>
            <Button Content="Busca por sup" Margin="3,3,3,3" Width="90" x:Name="buscaDocRel" Click="buscaDocRel_Click"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="30" VerticalAlignment="Center" Grid.Row="3" Grid.Column="1">
            <Button Content="Nuevo" Margin="3,3,3,3" Width="90" x:Name="nuevoAgrupador" Click="nuevoAgrupador_Click"/>
            <Button Content="Borrar" Margin="3,3,3,3" Width="90" x:Name="borrarrAgrupador" Click="borraAgrupador_Click"/>
            <Button Content="Obtener" Margin="3,3,3,3" Width="90" x:Name="obtenerAgrupador" Click="buscaAgrupador_Click"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="30" VerticalAlignment="Center" Grid.Row="4" Grid.Column="1">
            <Button Content="Nuevo" Margin="3,3,3,3" Width="90" x:Name="nuevoDocDet" Click="nuevoDocDet_Click"/>
            <Button Content="Obtener" Margin="3,3,3,3" Width="90" x:Name="obtenerDocDet" Click="obtenerDocDet_Click"/>
            <Button Content="Modificar" Margin="3,3,3,3" Width="90" x:Name="modificarDocDet" Click="modificarDocDet_Click"/>
            <Button Content="Procesa Lote" Margin="3,3,3,3" Width="90" x:Name="ProcesaLoteDet" Click="ProcesaLoteDet_Click"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="30" VerticalAlignment="Center" Grid.Row="6" Grid.Column="1">
            <Button Content="Obtener" Margin="3,3,3,3" Width="90" x:Name="obtenerMovimientos" Click="obtenerMovimientos_Click"/>
            <Button Content="Procesa Lote" Margin="3,3,3,3" Width="90" x:Name="ProcesaLoteMov" Click="ProcesaLoteMov_Click"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="30" VerticalAlignment="Center" Grid.Row="6" Grid.Column="1">
            <Button Content="Obtener" Margin="3,3,3,3" Width="90" x:Name="obtenerImpuestos" Click="obtenerImpuestos_Click"/>
            <Button Content="Procesa Lote" Margin="3,3,3,3" Width="90" x:Name="ProcesaLoteImp" Click="ProcesaLoteImp_Click"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="30" VerticalAlignment="Center" Grid.Row="5" Grid.Column="1">
            
            <Button Content="Procesa Lote" Margin="3,3,3,3" Width="90" x:Name="ProcesaDetallePres" Click="ProcesaDetallePres_Click"/>
        </StackPanel>
        <syncfusion:TabControlExt Grid.Row="8" Grid.ColumnSpan="2" >
            <syncfusion:TabItemExt Header="Listado">
                <ListBox x:Name="LogListBox" DisplayMemberPath="LogEntryDisplay" Margin="2" Background="Beige" />

            </syncfusion:TabItemExt>
            <syncfusion:TabItemExt Header="Objetos">
                <syncfusion:SfDataGrid  x:Name="grillaLogs" AutoGenerateColumns="True" AllowResizingColumns="True"/>

            </syncfusion:TabItemExt>
        </syncfusion:TabControlExt>
        
        <Button Content="Borrar login" Margin="3,3,3,3" Width="90" x:Name="limpiaLogin" Click="limpiaLogin_Click"  Grid.Row="9" Grid.Column="1" />
    </Grid>
</Window>
