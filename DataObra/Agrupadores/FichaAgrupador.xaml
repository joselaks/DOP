<Window x:Class="DataObra.Agrupadores.FichaAgrupador"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataObra.Agrupadores"
        mc:Ignorable="d"
        Title="FichaAgrupador" Height="200" Width="200">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Descripción" Margin="0,0,0,5" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding Descrip}" Margin="0,0,0,10"/>
            <TextBlock Text="Numero" Margin="0,0,0,5" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding Numero}" Width="69" TextAlignment="Center" Margin="0,0,0,10"/>
            <Button Content="Guardar" Click="BotonGuardar_Click" Width="80" Margin="0,12,0,0"/>
        </StackPanel>
    </Grid>
</Window>
