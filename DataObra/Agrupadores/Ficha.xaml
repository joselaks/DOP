<Window x:Class="DataObra.Agrupadores.Ficha"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar Tarjeta" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Título" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Descrip}" Margin="0,0,0,10"/>
            <Button Content="Guardar" Click="BotonGuardar_Click"/>
        </StackPanel>
    </Grid>
</Window>
