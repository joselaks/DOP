<Window x:Class="DataObra.Sistema.Principal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataObra.Sistema"
        mc:Ignorable="d"
        Title="." Height="850" Width="1400"
        Background="#FFFFFF"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#0063B1" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="FontSize" Value="24" />
            <!-- Tamaño de fuente -->
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E" />
                                <Setter Property="BorderBrush" Value="#004882" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004482" />
                                <Setter Property="BorderBrush" Value="#00315A" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Colores de fondo para los botones -->
        <SolidColorBrush x:Key="PanelBackground" Color="#007ACC"/>
        <SolidColorBrush x:Key="AgrupadoresBackground" Color="#006BB6"/>
        <SolidColorBrush x:Key="DocumentosBackground" Color="#005CA2"/>
        <SolidColorBrush x:Key="InsumosBackground" Color="#004C8E"/>
        <SolidColorBrush x:Key="RestaurarBackground" Color="#005A9E"/>
    </Window.Resources>

    <Grid>
        <!-- Menú -->
        <Grid x:Name="GridBotones">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="BotonPanel" Content="Panel" Background="{StaticResource PanelBackground}" Click="Boton_Click" Grid.Column="0"/>
            <Button x:Name="BotonAgrupadores" Content="Agrupadores" Background="{StaticResource AgrupadoresBackground}" Click="Boton_Click" Grid.Column="1"/>
            <Button x:Name="BotonDocumentos" Content="Documentos" Background="{StaticResource DocumentosBackground}" Click="Boton_Click" Grid.Column="2"/>
            <Button x:Name="BotonInsumos" Content="Insumos" Background="{StaticResource InsumosBackground}" Click="Boton_Click" Grid.Column="3"/>
            <!-- Restaurar -->
            <Button x:Name="BotonRestaurar" Content="⬅" Background="{StaticResource RestaurarBackground}" Click="BotonRestaurar_Click" Grid.Column="4" Width="80" Height="50" Visibility="Collapsed"/>
        </Grid>

        <!-- Contenido -->
        <ContentControl Grid.Row="1" Grid.ColumnSpan="5" x:Name="AreaContenido" Margin="10"/>
    </Grid>
</Window>
