<UserControl
    x:Class="DataObra.Insumos.NavInsumo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DataObra.Insumos"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="1360"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="*" />
            <RowDefinition Height="32" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="0"
            BorderBrush="Black"
            BorderThickness="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="32" />
                    <RowDefinition />

                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Name="Titulo1"
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="18"
                        FontWeight="Bold"
                        Text="Uno" />
                    <StackPanel
                        Grid.Column="2"
                        Margin="0,4,10,4"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <TextBox Width="92" Height="28" />
                        <Image Source="/DataObra;component/Imagenes/Lupa.png" />
                    </StackPanel>

                </Grid>
                <Syncfusion:SfDataGrid
                    x:Name="Grilla1"
                    Grid.Row="3"
                    AutoGenerateColumns="False"
                    SelectionMode="Single">
                    <Syncfusion:SfDataGrid.Columns>
                        <Syncfusion:GridTextColumn Width="92" HeaderText="Descripción" />
                        <Syncfusion:GridTextColumn Width="92" HeaderText="Unidad" />
                        <Syncfusion:GridTextColumn Width="92" HeaderText="Precio" />
                    </Syncfusion:SfDataGrid.Columns>
                </Syncfusion:SfDataGrid>
            </Grid>
        </Border>

        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                Name="Titulo3"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="18"
                FontWeight="Bold"
                Text="Tres" />
            <Image
                Margin="12,5,1,5"
                Source="/DataObra;component/Imagenes/Actualiza.png"
                ToolTip="Ver relacionado" />
        </StackPanel>

    </Grid>
</UserControl>
