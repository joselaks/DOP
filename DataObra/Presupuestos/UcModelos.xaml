<UserControl x:Class="DataObra.Presupuestos.UcModelos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataObra.Presupuestos"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid>
            <TextBlock Text="Modelo: " VerticalAlignment="Center" />
            <syncfusion:ComboBoxAdv
Name="ComboModelo"
   
Width="192"
Height="23"
HorizontalAlignment="Left"
VerticalAlignment="Top"
DisplayMemberPath="Descrip"
SelectedValuePath="ID"
SelectionChanged="ComboModelo_SelectionChanged" Margin="44,42,0,0" />
        </Grid>
        <Grid Grid.Row="1" x:Name="PresupuestoModelo"/>


    </Grid>
</UserControl>
