<UserControl x:Class="DataObra.Interfaz.Controles.SubControles.UcAgrupador"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataObra.Interfaz.Controles.SubControles"
             mc:Ignorable="d" 
             Height="200" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Nuevo Agrupador" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="TipoID:"/>
            <TextBox x:Name="TipoIDTextBox" Width="200" Margin="0,0,0,10"/>

            <TextBlock Text="Nombre:"/>
            <TextBox x:Name="NombreTextBox" Width="200" Margin="0,0,0,10"/>

            <TextBlock Text="Descripción:"/>
            <TextBox x:Name="DescripcionTextBox" Width="200" Margin="0,0,0,10"/>

            <Button Content="Guardar" Width="100" Click="Guardar_Click"/>
        </StackPanel>
    </Grid>
</UserControl>


