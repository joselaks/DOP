        </StackPanel>

        <Grid Grid.Row="2">
            <syncfusion:SfDataGrid
                Name="GrillaDocumentos"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                MouseDoubleClick="GrillaDocumentos_MouseDoubleClick">
                <syncfusion:SfDataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Click="NuevoDoc_Click" Header="Nueva Factura" />
                        <MenuItem Click="nuevoPres_Click"  Header="Nuevo Presupuesto" x:Name="nuevoPres"/>
                        <MenuItem Click="EditaDoc_Click" Header="Editar" />
                        <MenuItem Click="BorraDoc_Click" Header="Borrar" />
                    </ContextMenu>
                </syncfusion:SfDataGrid.ContextMenu>
                <syncfusion:SfDataGrid.Columns>
                    <syncfusion:GridTextColumn
                        Width="92"
                        HeaderText="Documento"
                        MappingName="TipoDoc" />
                    <syncfusion:GridDateTimeColumn
                        Width="69"
                        HeaderText="Fecha"
                        MappingName="Fecha1"
                        TextAlignment="Center"/>
                    <syncfusion:GridTextColumn
                        Width="120"
                        HeaderText="Obra"
                        MappingName="Obra" />
                    <syncfusion:GridTextColumn
                        Width="120"
                        HeaderText="Admin"
                        MappingName="Admin" />
                    <syncfusion:GridTextColumn
                        Width="69"
                        HeaderText="Tipo Ent."
                        MappingName="EntidadTipo"
                        />
                    <syncfusion:GridTextColumn
                        Width="120"
                        HeaderText="Entidad"
                        MappingName="Entidad" />
                    <syncfusion:GridTextColumn
                        Width="120"
                        HeaderText="Descripción"
                        MappingName="Descrip" />
                    <syncfusion:GridTextColumn
                        Width="69"
                        HeaderText="Numero"
                        MappingName="Numero1"
                        TextAlignment="Right"/>
                    <syncfusion:GridTextColumn
                        Width="90"
                        HeaderText="Pesos"
                        MappingName="Pesos"
                        TextAlignment="Right"/>
                    <syncfusion:GridTextColumn
                        Width="90"
                        HeaderText="Dolares"
                        MappingName="Dolares"
                        TextAlignment="Right"/>
                    <syncfusion:GridTextColumn
                        Width="90"
                        HeaderText="Impuestos"
                        MappingName="Impuestos"
                        TextAlignment="Right"/>
                    <syncfusion:GridTextColumn
                        Width="90"
                        HeaderText="Creado"
                        MappingName="Usuario"
                        TextAlignment="Center"/>
                    <syncfusion:GridTextColumn
                        Width="90"
                        HeaderText="Editado"
                        MappingName="Editado"
                        TextAlignment="Center"/>
                    <syncfusion:GridTextColumn
                        Width="90"
                        HeaderText="Revisado"
                        MappingName="Revisado"
                        TextAlignment="Center"/>
                </syncfusion:SfDataGrid.Columns>
            </syncfusion:SfDataGrid>

        </Grid>

        <syncfusion:ToolBarAdv Grid.Row="1" Height="30">
            <Button
                Grid.Row="1"
                Width="60"
                Height="25"
                HorizontalAlignment="Left"
                Margin="2,2,0,0"
                ToolTip="Actualizar"
                Click="ActualizaGrilla_Click">
                <Image Source="/Imagenes/Actualiza.png" Margin="1,1,0,1"
