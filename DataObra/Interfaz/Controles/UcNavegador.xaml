<UserControl
    x:Class="DataObra.Interfaz.Controles.UcNavegador"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DataObra.Interfaz.Controles"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="RoundedRadioButtonStyle" TargetType="{x:Type RadioButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RadioButton}">
                        <Border
                            Width="100"
                            Height="35"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="17.5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#FF3399FF" />
                                <Setter Property="BorderBrush" Value="#FF3399FF" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter Property="Background" Value="White" />
                                <Setter Property="BorderBrush" Value="Gray" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel
            x:Name="items"
            Grid.Row="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <!--  Los RadioButton se agregarán programáticamente aquí  -->
        </StackPanel>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition x:Name="panelBuscador" Width="300" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0">

                <syncfusion:SfTreeGrid x:Name="grillaArbol" Grid.Column="0" />
            </Grid>
            <syncfusion:SfGridSplitter
                Grid.Column="1"
                Width="5"
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch"
                EnableCollapseButton="True"
                ResizeBehavior="PreviousAndNext"
                ShowsPreview="True" />
            <Grid Grid.Column="2">
                <TextBlock Margin="15,20,0,0">Ficha</TextBlock>

            </Grid>
        </Grid>
        <syncfusion:DropDownButtonAdv
            Width="75"
            Height="35"
            Margin="33,0,0,0"
            HorizontalAlignment="Left"
            Label="Filtro"
            SizeMode="Normal"
            SmallIcon="/Interfaz/Imagenes/Filtro.png">
            <syncfusion:DropDownMenuGroup>
                <Grid Width="250" Height="150">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Height="23" Orientation="Horizontal">
                        <Label Margin="-3,0,0,0" Content="DE:" />
                        <DatePicker
                            Name="FechaDesde"
                            Width="91"
                            Margin="-2,0,0,0" />
                        <Label Content="A:" />
                        <DatePicker
                            Name="FechaHasta"
                            Width="91"
                            Margin="-2,0,0,0" />
                    </StackPanel>

                </Grid>
            </syncfusion:DropDownMenuGroup>
        </syncfusion:DropDownButtonAdv>


        <syncfusion:ToolBarAdv Grid.Row="1" Height="30">
            <DockPanel LastChildFill="True">
                <Button
                    Width="80"
                    Height="20"
                    Content="Nuevo"
                    DockPanel.Dock="Left" />
                <Button
                    Width="80"
                    Height="20"
                    Content="Abrir"
                    DockPanel.Dock="Left" />
                <Button
                    Width="80"
                    Height="20"
                    Content="Borrar"
                    DockPanel.Dock="Left" />
            </DockPanel>
        </syncfusion:ToolBarAdv>


    </Grid>
</UserControl>





