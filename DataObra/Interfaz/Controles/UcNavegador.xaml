                BorderBrush="Beige"
                Checked="ToggleButton_Checked"
                Content="Facturas"
                Unchecked="ToggleButton_Unchecked" />
            <ToggleButton
                Tag="5"  
                Width="100"
                Height="35"
                Margin="5"
