<Window x:Class="DataObra.Interfaz.Ventanas.WiInicio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataObra.Interfaz.Ventanas"
        mc:Ignorable="d"
        Height="800" Width="1200"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        >
    <Border Margin="10" BorderBrush="White" BorderThickness="2" Background="WhiteSmoke"  CornerRadius="5">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>
        <Grid>
            <Image Margin="5,5,5,5"  Source="/Interfaz/Imagenes/construccion.png" Stretch="Fill" Opacity="0.5"></Image>
                
        </Grid>
    </Border>
</Window>
