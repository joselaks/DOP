<Window
    x:Class="DataObra.Interfaz.Ventanas.WiLogin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DataObra.Interfaz.Ventanas"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Width="800"
    Height="450"
    WindowStyle="None"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Encabezado  -->
        <TextBlock
            Margin="20"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="44"
            FontWeight="Black"
            Foreground="Orange"
            Text="DataObra" />
        <TextBlock
            Margin="20"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            FontSize="14"
            FontStyle="Italic"
            Text="Versión Constructoras" />

        <!--  Contenido Principal  -->
        <Grid
            Name="MainContent"
            Grid.Row="1"
            Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="20" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!--  Sección de Inicio de Sesión  -->

            <syncfusion:SfBusyIndicator x:Name="esperaLogin" IsBusy="False">
                <StackPanel
                    Name="LoginSection"
                    Grid.Column="0"
                    Margin="10,10,10,10"
                    Background="#F0F0F0">
                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="20"
                        Text="Iniciar Sesión" />
                    <TextBox
                        Name="txtUsuario"
                        Height="20"
                        Margin="0,0,0,10"
                        GotFocus="TextBox_GotFocus"
                        LostFocus="TextBox_LostFocus" />
                    <PasswordBox
                        Name="txtContraseña"
                        Height="20"
                        Margin="0,0,0,10"
                        GotFocus="PasswordBox_GotFocus"
                        LostFocus="PasswordBox_LostFocus" />
                    <Button
                        Height="20"
                        Background="#007ACC"
                        Click="VerificaUsuario_Click"
                        Content="Acceder como Usuario"
                        Foreground="White" />
                    <TextBlock
                        x:Name="texalta"
                        Width="282"
                        Margin="0,20,0,5"
                        HorizontalAlignment="Center"
                        Text="Puede comenzar a usar una versión gratuita, dandose de alta como nuevo usuario"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                    <Button
                        Height="20"
                        Background="#007ACC"
                        Content="Alta de nuevo Usuario"
                        Foreground="White" />
                    <TextBlock
                        x:Name="textodemo"
                        Margin="0,20,0,5"
                        HorizontalAlignment="Center"
                        Text="Puede ingresar sin darse de alta en modo Demo" />
                    <Button
                        Height="20"
                        Background="#007ACC"
                        Click="VerificaUsuario_Click"
                        Content="Acceder en modo Demo"
                        Foreground="White" />



                </StackPanel>
            </syncfusion:SfBusyIndicator>
            <Button
                x:Name="bSalir"
                Grid.Row="1"
                Width="100"
                Background="#007ACC"
                Click="bSalir_Click"
                Content="Salir"
                Foreground="White" />

            <!--  Sección de Novedades  -->
            <StackPanel
                Name="NewsSection"
                Grid.RowSpan="2"
                Grid.Column="1"
                Margin="10,10,10,10"
                Background="#FFFFFF">
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="20"
                    Text="Últimas Novedades del Mercado de la Construcción" />
                <TextBlock Margin="0,0,0,5" Text="1. Innovación en materiales: Nuevos tipos de materiales sostenibles y la impresión 3D están revolucionando el mercado." />
                <TextBlock Margin="0,0,0,5" Text="2. Edificación modular: La construcción fuera del sitio está ganando popularidad." />
                <TextBlock Margin="0,0,0,5" Text="3. Software de gestión: Herramientas como Oracle Construction Intelligence Cloud Analytics están mejorando la gestión de proyectos." />

                <TextBlock
                    Margin="0,10,0,10"
                    FontSize="20"
                    Text="Novedades del Software" />
                <TextBlock Margin="0,0,0,5" Text="1. Actualización de seguridad: Nueva versión con mejoras en la seguridad de datos." />
                <TextBlock Margin="0,0,0,5" Text="2. Integración con BIM: Ahora compatible con modelos de información de construcción." />
                <TextBlock Margin="0,0,0,5" Text="3. Mejora en la interfaz: Diseño más intuitivo y fácil de usar." />
            </StackPanel>
        </Grid>
    </Grid>

</Window>
