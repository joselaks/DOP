<Window x:Class="DataObra.Interfaz.Ventanas.WiTableroDOP"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DataObra.Interfaz.Ventanas"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="800" Width="1200"
    AllowsTransparency="True"
    Background="#004482"
    ResizeMode="CanResizeWithGrip"
    WindowStyle="None"
    WindowStartupLocation="CenterScreen"
    MinWidth="800">
    <Window.Resources>
       
    </Window.Resources>
    <Border
        x:Name="MainBorder"
        Margin="10"
        Background="{Binding PrimaryColorBrush}"
        BorderBrush="White"
        BorderThickness="2"
        CornerRadius="5">
        <Border.Effect>
            <DropShadowEffect
                x:Name="WindowShadow"
                BlurRadius="20"
                Opacity="0.5"
                ShadowDepth="0"
                Color="Black" />
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Encabezado personalizado  -->
            <Border
                Grid.Row="0"
                Background="{Binding PrimaryColorBrush}"
                BorderBrush="White"
                BorderThickness="0"
                CornerRadius="20,20,0,0"
                MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid>
                    <TextBlock
                        Padding="2"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Foreground="White"
                        Text="DataObra" />
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Button
                            Width="20"
                            Margin="3"
                            Click="Minimize_Click"
                            Content="_" />
                        <Button
                            Width="20"
                            Margin="3"
                            Click="Maximize_Click"
                            Content="□" />
                        <Button
                            Width="20"
                            Margin="3"
                            Click="Close_Click"
                            Content="X" />
                    </StackPanel>
                </Grid>
            </Border>
            <Grid
                Grid.Row="1"
                Background="White">
                
            </Grid>

           
            <StackPanel
                Grid.Row="2"
                Height="30"
                Margin="5,0,5,5"
                Orientation="Horizontal">
                <TextBlock
                    FontSize="12"
                    Foreground="White"
                    Text="Uso del servidor: " 
                    VerticalAlignment="Center"/>
                
            </StackPanel>
        </Grid>
    </Border>
</Window>
