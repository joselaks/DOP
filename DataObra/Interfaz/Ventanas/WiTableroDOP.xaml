<Window x:Class="DataObra.Interfaz.Ventanas.WiTableroDOP"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DataObra.Interfaz.Ventanas"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Height="800" Width="1200"
    AllowsTransparency="True"
    Background="#004482"
    ResizeMode="CanResizeWithGrip"
    WindowStyle="None"
    WindowStartupLocation="CenterScreen"
    MinWidth="800">
    <Window.Resources>
       
    </Window.Resources>
    <Border
        x:Name="MainBorder"
        Margin="10"
        Background="{Binding PrimaryColorBrush}"
        BorderBrush="White"
        BorderThickness="2"
        CornerRadius="5">
        <Border.Effect>
            <DropShadowEffect
                x:Name="WindowShadow"
                BlurRadius="20"
                Opacity="0.5"
                ShadowDepth="0"
                Color="Black" />
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Encabezado personalizado  -->
            <Border
                Grid.Row="0"
                Background="{Binding PrimaryColorBrush}"
                BorderBrush="White"
                BorderThickness="0"
                CornerRadius="20,20,0,0"
                MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid>
                    <TextBlock
                        Padding="2"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Foreground="White"
                        Text="DataObra" />
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Button
                            Width="20"
                            Margin="3"
                            Click="Minimize_Click"
                            Content="_" />
                        <Button
                            Width="20"
                            Margin="3"
                            Click="Maximize_Click"
                            Content="□" />
                        <Button
                            Width="20"
                            Margin="3"
                            Click="Close_Click"
                            Content="X" />
                    </StackPanel>
                </Grid>
            </Border>
            <Grid
                Grid.Row="1"
                Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>



                <syncfusion:TabNavigationControl
                x:Name="zona00"
                Margin="15"
                TabStripVisibility="Visible">
                    <syncfusion:TabNavigationItem Header="Valor de m2 en modelos">
                        <syncfusion:TabNavigationItem.Content>
                            <Grid>
                                <syncfusion:SfChart x:Name="graficoBarras"/>
                            </Grid>
                        </syncfusion:TabNavigationItem.Content>
                    </syncfusion:TabNavigationItem>

                </syncfusion:TabNavigationControl>

            <syncfusion:TabControlExt
                Name="zona10"
                Grid.Row="1"
                Grid.Column="0"
                Margin="15"
                TabItemSelectedForeground="Black" />

                <syncfusion:TabControlExt
                Name="zona11"
                Grid.Row="0"
                Grid.Column="1"
                    Grid.RowSpan="2"
                Margin="15"
                TabItemSelectedForeground="Black" >
                    <syncfusion:TabItemExt Header="Mis presupuestos">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="2">
                                <syncfusion:SfDataGrid
         Name="GrillaDocumentos"
         AutoGenerateColumns="False"
         IsReadOnly="True"
         MouseDoubleClick="GrillaDocumentos_MouseDoubleClick">
                                    <syncfusion:SfDataGrid.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Nuevo" Click="nuevoPres_Click" />
                                            <MenuItem Click="EditaDoc_Click" Header="Editar" />
                                            <MenuItem Click="BorraDoc_Click" Header="Borrar" />
                                        </ContextMenu>
                                    </syncfusion:SfDataGrid.ContextMenu>
                                    <syncfusion:SfDataGrid.Columns>
                                        <syncfusion:GridTextColumn
                 Width="250"
                 HeaderText="Nombre"
                 MappingName="TipoDoc" />
                                        <syncfusion:GridDateTimeColumn
                 Width="69"
                 HeaderText="Fecha"
                 MappingName="Fecha1"
                 TextAlignment="Center"/>
                                        <syncfusion:GridTextColumn
                 Width="90"
                 HeaderText="Pesos"
                 MappingName="Pesos"
                 TextAlignment="Right"/>
                                        <syncfusion:GridTextColumn
                 Width="90"
                 HeaderText="Dolares"
                 MappingName="Dolares"
                 TextAlignment="Right"/>
                                        <syncfusion:GridTextColumn
                 Width="90"
                 HeaderText="Impuestos"
                 MappingName="Impuestos"
                 TextAlignment="Right"/>
                                        <syncfusion:GridTextColumn
                 Width="90"
                 HeaderText="Valor m2"
                 MappingName="Autorizado"
                 TextAlignment="Center"/>
                                    </syncfusion:SfDataGrid.Columns>
                                </syncfusion:SfDataGrid>

                            </Grid>

                        </Grid>
                    </syncfusion:TabItemExt>
                </syncfusion:TabControlExt>



          

           
        </Grid>

        <StackPanel
                Grid.Row="2"
                Height="30"
                Margin="5,0,5,5"
                Orientation="Horizontal">
                <TextBlock
                    FontSize="12"
                    Foreground="White"
                    Text="Uso del servidor: " 
                    VerticalAlignment="Center"/>
                
            </StackPanel>
        </Grid>
    </Border>
</Window>
