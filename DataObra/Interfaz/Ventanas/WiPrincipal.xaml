<Window
    x:Class="DataObra.Interfaz.Ventanas.WiPrincipal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DataObra.Interfaz.Ventanas"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="800" Width="1200"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="CanResizeWithGrip"
    WindowStyle="None"
    WindowStartupLocation="CenterScreen"
    MinWidth="800">
    <Window.Resources>
        <Style x:Key="RoundedRadioButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border
                         Width="100"
                         Height="100"
                         Background="{TemplateBinding Background}"
                         BorderBrush="{TemplateBinding BorderBrush}"
                         BorderThickness="1"
                         CornerRadius="17.5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Border
        x:Name="MainBorder"
        Margin="10"
        Background="{Binding PrimaryColorBrush}"
        BorderBrush="White"
        BorderThickness="2"
        CornerRadius="5">
        <Border.Effect>
            <DropShadowEffect
                x:Name="WindowShadow"
                BlurRadius="20"
                Opacity="0.5"
                ShadowDepth="0"
                Color="Black" />
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Encabezado personalizado  -->
            <Border
                Grid.Row="0"
                Background="{Binding PrimaryColorBrush}"
                BorderBrush="White"
                BorderThickness="0"
                CornerRadius="20,20,0,0"
                MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid>
                    <TextBlock
                        Padding="2"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Foreground="White"
                        Text="DataObra" />
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Button
                            Width="20"
                            Margin="3"
                            Click="Minimize_Click"
                            Content="_" />
                        <Button
                            Width="20"
                            Margin="3"
                            Click="Maximize_Click"
                            Content="□" />
                        <Button
                            Width="20"
                            Margin="3"
                            Click="Close_Click"
                            Content="X" />
                    </StackPanel>
                </Grid>
            </Border>

            <!--  TabControl  -->
            <TabControl
                Grid.Row="1"
                Margin="5,0,5,5"
                BorderThickness="0">
                <TabControl.Resources>
                    <!--  Estilo para centrar los TabItem  -->
                    <Style TargetType="TabPanel">
                        <Setter Property="HorizontalAlignment" Value="Center" />
                    </Style>
                    <Style TargetType="TabItem">
                        <Setter Property="Width" Value="200" />
                        <!--  Ajusta el valor según tus necesidades  -->
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border
                                        Name="Border"
                                        Margin="2,0,2,0"
                                        Padding="10,10,10,0"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="10,10,0,0">
                                        <Grid>
                                            <ContentPresenter
                                                x:Name="ContentSite"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                ContentSource="Header" />
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="White" />
                                            <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,0" />
                                            <Setter Property="Foreground" Value="Black" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter TargetName="Border" Property="Background" Value="{Binding PrimaryColorBrush}" />
                                            <Setter TargetName="Border" Property="BorderBrush" Value="White" />
                                            <Setter Property="Foreground" Value="White" />
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="Border" Property="Background" Value="Gray" />
                                            <Setter TargetName="Border" Property="BorderBrush" Value="DarkGray" />
                                            <Setter Property="Foreground" Value="DarkGray" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <!--<Image Source="icon1.png" Width="16" Height="16" Margin="0,0,5,0"/>-->
                            <TextBlock VerticalAlignment="Center" Text="Panel" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid x:Name="contenidoPanel"/>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <!--<Image Source="icon2.png" Width="16" Height="16" Margin="0,0,5,0"/>-->
                            <TextBlock VerticalAlignment="Center" Text="Documentos" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid x:Name="contenidoDocumentos"/>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <!--<Image Source="icon2.png" Width="16" Height="16" Margin="0,0,5,0"/>-->
                            <TextBlock VerticalAlignment="Center" Text="Agrupadores" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid x:Name="contenidoAgrupadores"/>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <!--<Image Source="icon2.png" Width="16" Height="16" Margin="0,0,5,0"/>-->
                            <TextBlock VerticalAlignment="Center" Text="Insumos" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid x:Name="contenidoInsumos"/>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <!--<Image Source="icon2.png" Width="16" Height="16" Margin="0,0,5,0"/>-->
                            <TextBlock VerticalAlignment="Center" Text="Informes" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid x:Name="contenidoInformes"/>
                </TabItem>
            </TabControl>
            <StackPanel
                Grid.Row="2"
                Height="30"
                Margin="5,0,5,5"
                Orientation="Horizontal">
                <TextBlock
                    FontSize="12"
                    Foreground="White"
                    Text="Usuario: " />
                <TextBlock>
                    Rol:<Hyperlink x:Name="hRol" Click="hRol_Click"> 
                        <Run x:Name="RolTexto" Text="NombreRol" /> 
                    </Hyperlink></TextBlock>
            </StackPanel>
        </Grid>
    </Border>
</Window>







