<UserControl
    x:Class="DataObra.Presupuestos.Controles.UcMaestroPrecios"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DataObra.Presupuestos.Controles"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition x:Name="sepPrecio" Width="auto" />
            <ColumnDefinition x:Name="panPrecio" Width="*" />
        </Grid.ColumnDefinitions>
        <Grid x:Name="gridMaestro" />
        <syncfusion:SfGridSplitter
            x:Name="sepPrecios"
            Grid.Column="1"
            Width="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Stretch"
            EnableCollapseButton="True"
            ResizeBehavior="PreviousAndNext"
            ShowsPreview="True" />
        <Grid x:Name="gridPrecios" Grid.Column="2" />
    </Grid>
</UserControl>
