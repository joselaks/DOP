<UserControl
    x:Class="DOP.Presupuestos.Controles.UcListado"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:clases="clr-namespace:DOP.Presupuestos.Clases"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DOP.Presupuestos.Controles"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:numberformat="clr-namespace:System.Globalization;assembly=mscorlib"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <clases:DecimalToStringConverter x:Key="DecimalToStringConverter" />
        <Style x:Key="TipoCellStyle" TargetType="syncfusion:TreeGridCell">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=Tipo}" Value="R">
                    <Setter Property="FontWeight" Value="Bold" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!--  DataTemplate para ícono Rubro  -->
        <DataTemplate x:Key="RubTemplate">
            <Image
                Width="15"
                Height="15"
                Source="pack://application:,,,/Imagenes/Rubro.png" />
        </DataTemplate>
        <!--  DataTemplate para ícono Tarea  -->
        <DataTemplate x:Key="TarTemplate">
            <Image
                Width="15"
                Height="15"
                Source="pack://application:,,,/Imagenes/Tarea.png" />
        </DataTemplate>
        <!--  DataTemplate para ícono Materiales  -->
        <DataTemplate x:Key="MatTemplate">
            <Image
                Width="15"
                Height="15"
                Source="pack://application:,,,/Imagenes/Material.png" />
        </DataTemplate>
        <!--  DataTemplate para ícono Mano de obra  -->
        <DataTemplate x:Key="MdoTemplate">
            <Image
                Width="15"
                Height="15"
                Source="pack://application:,,,/Imagenes/ManoDeObra.png" />
        </DataTemplate>
        <!--  DataTemplate para ícono Equipos  -->
        <DataTemplate x:Key="EquTemplate">
            <Image
                Width="15"
                Height="15"
                Source="pack://application:,,,/Imagenes/Equipos.png" />
        </DataTemplate>
        <!--  DataTemplate para ícono Subcontratos  -->
        <DataTemplate x:Key="SubTemplate">
            <Image
                Width="15"
                Height="15"
                Source="pack://application:,,,/Imagenes/Subcontratos.png" />
        </DataTemplate>
        <!--  DataTemplate para ícono Otros  -->
        <DataTemplate x:Key="OtrTemplate">
            <Image
                Width="15"
                Height="15"
                Source="pack://application:,,,/Imagenes/Otros.png" />
        </DataTemplate>
        <!--  DataTemplate para ícono AuxTemplate  -->
        <DataTemplate x:Key="AuxTemplate">
            <Image
                Width="15"
                Height="15"
                Source="pack://application:,,,/Imagenes/Arbol.png" />
        </DataTemplate>
        <!--  DataTemplateSelector  -->
        <local:IconTemplateSelector
            x:Key="IconTemplateSelector"
            AuxTemplate="{StaticResource AuxTemplate}"
            EquTemplate="{StaticResource EquTemplate}"
            MatTemplate="{StaticResource MatTemplate}"
            MdoTemplate="{StaticResource MdoTemplate}"
            OtrTemplate="{StaticResource OtrTemplate}"
            RubTemplate="{StaticResource RubTemplate}"
            SubTemplate="{StaticResource SubTemplate}"
            TarTemplate="{StaticResource TarTemplate}" />


    </UserControl.Resources>

    <Grid x:Name="gridPrincipal">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition x:Name="sepSuperiores" Height="0" />
            <RowDefinition x:Name="panSuperiores" Height="0" />
        </Grid.RowDefinitions>
        <StackPanel
            x:Name="encabezado"
            Grid.Row="0"
            Orientation="Horizontal">
            <TextBlock
                VerticalAlignment="Center"
                FontSize="20"
                FontWeight="Bold"
                Text="Listado de " />

            <TextBlock
                x:Name="SeleccionInsumo"
                VerticalAlignment="Center"
                FontSize="20"
                FontWeight="Bold"
                Text="Insumos básicos" />
            <ComboBox
                x:Name="comboTipoListado"
                Width="220"
                Margin="20,0,0,0"
                VerticalAlignment="Center"
                SelectedIndex="0"
                SelectionChanged="comboTipoListado_SelectionChanged"
                Visibility="Collapsed">
                <ComboBoxItem Content="Insumos básicos" />
                <ComboBoxItem Content="Materiales" />
                <ComboBoxItem Content="Mano de Obra" />
                <ComboBoxItem Content="Equipos" />
                <ComboBoxItem Content="Subcontratos" />
                <ComboBoxItem Content="Otros" />
                <ComboBoxItem Content="Auxiliares" />
                <Separator />
                <ComboBoxItem Content="Rubros" />
                <ComboBoxItem Content="Tareas" />

            </ComboBox>



        </StackPanel>

        <syncfusion:SfTreeGrid
            x:Name="grillaListados"
            Grid.Row="1"
            AllowDraggingRows="True"
            AllowDrop="True"
            AllowEditing="True"
            AllowResizingColumns="True"
            AutoGenerateColumns="False"
            CurrentCellBeginEdit="grillaListados_CurrentCellBeginEdit"
            CurrentCellEndEdit="grillaListados_CurrentCellEndEdit"
            ExpanderColumn="Descripcion"
            KeyDown="grillaListados_KeyDown"
            SelectionChanged="grillaListados_SelectionChanged"
            SelectionMode="Single">
            <syncfusion:SfTreeGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Click="VerSuperiores_Click" Header="Ver superiores" />
                </ContextMenu>
            </syncfusion:SfTreeGrid.ContextMenu>
            <syncfusion:SfTreeGrid.StackedHeaderRows>
                <syncfusion:StackedHeaderRow>
                    <syncfusion:StackedHeaderRow.StackedColumns>
                        <syncfusion:StackedColumn ChildColumns="Importe1" HeaderText="Total" />
                    </syncfusion:StackedHeaderRow.StackedColumns>
                </syncfusion:StackedHeaderRow>
            </syncfusion:SfTreeGrid.StackedHeaderRows>


            <syncfusion:SfTreeGrid.Columns>


                <syncfusion:TreeGridTextColumn
                    Width="50"
                    IsHidden="true"
                    MappingName="ID" />


                <syncfusion:TreeGridTemplateColumn
                    Width="50"
                    CellTemplateSelector="{StaticResource IconTemplateSelector}"
                    HeaderText="Nat"
                    MappingName="Tipo" />


                <syncfusion:TreeGridTextColumn
                    Width="50"
                    IsHidden="True"
                    MappingName="Tipo" />


                <syncfusion:TreeGridTextColumn Width="250" MappingName="Descripcion" />


                <syncfusion:TreeGridNumericColumn
                    Width="60"
                    HeaderText="Cant."
                    MappingName="Cantidad"
                    NumberDecimalDigits="2"
                    NumberDecimalSeparator=","
                    NumberGroupSeparator="."
                    NumberGroupSizes="3" />

                <syncfusion:TreeGridNumericColumn
                    Width="80"
                    HeaderText="P.U."
                    MappingName="PU1"
                    NumberDecimalDigits="2"
                    NumberDecimalSeparator=","
                    NumberGroupSeparator="."
                    NumberGroupSizes="3" />


                <syncfusion:TreeGridNumericColumn
                    x:Name="colImporte1"
                    Width="120"
                    CellStyle="{StaticResource TipoCellStyle}"
                    HeaderText="{Binding totGeneral1}"
                    MappingName="Importe1"
                    NumberDecimalDigits="2"
                    NumberDecimalSeparator=","
                    NumberGroupSeparator="."
                    NumberGroupSizes="3" />



            </syncfusion:SfTreeGrid.Columns>

        </syncfusion:SfTreeGrid>

        <syncfusion:SfGridSplitter
            Grid.Row="2"
            Height="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            EnableCollapseButton="True"
            ResizeBehavior="PreviousAndNext"
            ShowsPreview="True" />

        <syncfusion:SfTreeGrid
            x:Name="gridSuperiores"
            Grid.Row="3"
            AllowEditing="False"
            AllowResizingColumns="True"
            AutoGenerateColumns="False"
            SelectionMode="Single">
            <syncfusion:SfTreeGrid.Columns>
                <syncfusion:TreeGridTextColumn
                    Width="50"
                    HeaderText="ID"
                    MappingName="ID" />
                <syncfusion:TreeGridTextColumn
                    Width="250"
                    HeaderText="Descripción"
                    MappingName="Descripcion" />
                <syncfusion:TreeGridTextColumn
                    Width="50"
                    HeaderText="Tipo"
                    MappingName="Tipo" />
                <syncfusion:TreeGridNumericColumn
                    Width="80"
                    HeaderText="Importe"
                    MappingName="Importe1"
                    NumberDecimalDigits="2"
                    NumberDecimalSeparator=","
                    NumberGroupSeparator="." />
            </syncfusion:SfTreeGrid.Columns>
        </syncfusion:SfTreeGrid>




    </Grid>


</UserControl>
