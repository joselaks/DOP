<UserControl
    x:Class="DOP.Presupuestos.Controles.UcMaestro"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DOP.Presupuestos.Controles"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:syncfusionskin="[syncfusionskin ]clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    d:DesignHeight="450"
    d:Width="500"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="syncfusion:TreeGridRowControl">
            <Setter Property="Background" Value="Transparent" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock
                Margin="5,0,5,0"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="Bold"
                Text="Maestro" />
            <syncfusion:ComboBoxAdv
                x:Name="SelectorTipo"
                Width="200"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                DefaultText="Seleccione tipo de concepto"
                SelectionChanged="SelectorTipo_SelectionChanged">

                <syncfusion:ComboBoxItemAdv Content="Rubros" />
                <syncfusion:ComboBoxItemAdv Content="Tareas" />
                <syncfusion:ComboBoxItemAdv Content="Materiales" />
                <syncfusion:ComboBoxItemAdv Content="Mano de obra" />
                <syncfusion:ComboBoxItemAdv Content="Equipos" />
                <syncfusion:ComboBoxItemAdv Content="Subcontratos" />
                <syncfusion:ComboBoxItemAdv Content="Otros" />
                <syncfusion:ComboBoxItemAdv Content="Auxiliares" />

            </syncfusion:ComboBoxAdv>
            <Button
                x:Name="obtener"
                Margin="10,0,0,0"
                Padding="10,2"
                VerticalAlignment="Center"
                Click="obtener_Click"
                Content="Obtener" />
            <Button
                Margin="10,0,0,0"
                Padding="10,2"
                VerticalAlignment="Center"
                Click="BtnGuardar_Click"
                Content="Guardar" />

            <Button
                Margin="10,0,0,0"
                Padding="10,2"
                VerticalAlignment="Center"
                Click="Button_Click"
                Content="Recalculo" />
        </StackPanel>

        <syncfusion:SfTreeGrid
            x:Name="grillaMaestro"
            Grid.Row="1"
            AllowDraggingRows="True"
            AllowDrop="True"
            AllowEditing="True"
            AllowResizingColumns="True"
            AutoGenerateColumns="False">
            <syncfusion:SfTreeGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem
                        Click="MenuItem_Borrar_Click"
                        Header="Borrar"
                        Icon="🗑" />
                </ContextMenu>
            </syncfusion:SfTreeGrid.ContextMenu>
            <syncfusion:SfTreeGrid.Resources>
                <Style TargetType="syncfusion:SfTreeGrid">
                    <Setter Property="Background" Value="LightGray" />
                </Style>
            </syncfusion:SfTreeGrid.Resources>
            <syncfusion:SfTreeGrid.Columns>

                <syncfusion:TreeGridColumns>

                    <syncfusion:TreeGridTextColumn
                        Width="60"
                        MappingName="Tipo"
                        TextAlignment="Right" />


                    <syncfusion:TreeGridTextColumn
                        Width="250"
                        ColumnSizer="AutoFillColumn"
                        MappingName="Descripcion" />
                    <syncfusion:TreeGridTextColumn
                        Width="60"
                        MappingName="Unidad"
                        TextAlignment="Right" />
                    <syncfusion:TreeGridNumericColumn
                        Width="80"
                        HeaderText="P.U."
                        MappingName="PU1" />
                </syncfusion:TreeGridColumns>
            </syncfusion:SfTreeGrid.Columns>
        </syncfusion:SfTreeGrid>

    </Grid>
</UserControl>
