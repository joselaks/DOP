<UserControl x:Class="DOP.Presupuestos.Controles.UcDosaje"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                 xmlns:numberformat="clr-namespace:System.Globalization;assembly=mscorlib"
                xmlns:syncfusion="http://schemas.syncfusion.com/wpf"

             xmlns:local="clr-namespace:DOP.Presupuestos.Controles"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">





    <syncfusion:SfTreeGrid
    x:Name="grillaDetalle"
    AutoGenerateColumns="False"
    AllowEditing="True"
    ItemsSource="{Binding Inferiores}">
        <syncfusion:SfTreeGrid.Columns>
            <syncfusion:TreeGridTextColumn MappingName="ID" HeaderText="ID" />
            <syncfusion:TreeGridTextColumn MappingName="Descripcion" HeaderText="Descripción" />
            <!-- ...otras columnas... -->
        </syncfusion:SfTreeGrid.Columns>
    </syncfusion:SfTreeGrid>

  
    
</UserControl>
