<UserControl
    x:Class="DOP.Presupuestos.Controles.UcModelo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="160"
    Height="160">
    <Border
        Padding="10"
        Background="#FFEEEEEE"
        BorderBrush="#FFCCCCCC"
        BorderThickness="1"
        CornerRadius="18">
        <StackPanel>
            <TextBlock
                x:Name="Titulo"
                FontSize="16"
                FontWeight="Bold"
                Text="Título" />
         

            <!-- NUEVOS CAMPOS CON NOMBRE -->
            <TextBlock
                Margin="0,2,0,0"
                FontWeight="DemiBold"
                Text="Costo total:" />
            <TextBlock
                x:Name="CostoTotalText"
                Text=""
                FontSize="10" />

            <TextBlock
                Margin="0,2,0,0"
                FontWeight="DemiBold"
                Text="Superficie:" />
            <TextBlock
                x:Name="SuperficieText"
                Text=""
                FontSize="10" />

            <TextBlock
                Margin="0,2,0,0"
                FontWeight="DemiBold"
                Text="Valor m²:" />
            <TextBlock
                x:Name="ValorM2Text"
                Text=""
                FontSize="10" />
        </StackPanel>
    </Border>
</UserControl>
