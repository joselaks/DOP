<UserControl x:Class="DOP.Presupuestos.Controles.UcModelo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="160" Width="160">
    <Border Background="#FFEEEEEE" BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="18" Padding="10">
        <StackPanel>
            <TextBlock x:Name="Titulo" FontWeight="Bold" FontSize="16" Text="Título"/>
            <TextBlock x:Name="Descripcion" FontSize="12" Text="Descripción"/>
        </StackPanel>
    </Border>
</UserControl>
