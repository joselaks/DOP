<UserControl
    x:Class="DOP.Presupuestos.Controles.UcModelo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="160"
    Height="160">
    <Border
        Padding="10"
        Background="#FFEEEEEE"
        BorderBrush="#FFCCCCCC"
        BorderThickness="1"
        CornerRadius="18">
        <StackPanel>
            <TextBlock
                x:Name="Titulo"
                FontSize="16"
                FontWeight="Bold"
                Text="Título" />
            <TextBlock
                x:Name="Descripcion"
                FontSize="12"
                Text="Descripción" />
        </StackPanel>
    </Border>
</UserControl>
