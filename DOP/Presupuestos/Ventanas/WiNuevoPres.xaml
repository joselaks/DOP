<Window
    x:Class="DOP.Presupuestos.Ventanas.WiNuevoPres"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Nuevo Presupuesto"
    Width="800"
    Height="500"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterOwner"
    WindowStyle="SingleBorderWindow">
    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFEEEEEE" />
            <Setter Property="BorderBrush" Value="#FFCCCCCC" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="0,0,10,10" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="18">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect
                                            BlurRadius="12"
                                            Opacity="0.4"
                                            ShadowDepth="2"
                                            Color="Black" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!--  Elimina el adorno de foco visual  -->
                            <Trigger Property="IsKeyboardFocused" Value="True" />
                            <Trigger Property="IsFocused" Value="True" />
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Margin="0,0,0,20"
            FontSize="18"
            FontWeight="Bold"
            Text="Seleccione cómo desea crear el nuevo presupuesto:" />
        <StackPanel
            Grid.Row="1"
            VerticalAlignment="Top"
            Orientation="Vertical">
            <!--  Opción 1: Presupuesto vacío  -->
            <Button
                x:Name="btnVacio"
                Height="40"
                Click="btnVacio_Click"
                Content="Crear presupuesto vacío"
                Style="{StaticResource RoundedButtonStyle}" />

            <!--  Opción 2: Modelos predefinidos  -->
            <TextBlock
                Margin="0,10,0,5"
                FontWeight="SemiBold"
                Text="Crear en base a modelos:" />
            <ScrollViewer
                Grid.Row="1"
                Margin="0,10,0,0"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Disabled">
                <StackPanel x:Name="panelModelos" Orientation="Horizontal" />
            </ScrollViewer>
            <!--  Opción 3: Modelos propios  -->
            <TextBlock
                Margin="0,15,0,5"
                FontWeight="SemiBold"
                Text="Crear en base a modelos propios:" />
            <StackPanel
                x:Name="panelModelosPropios"
                Margin="0,10,0,0"
                Orientation="Horizontal" />
            
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Margin="0,20,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="100"
                Click="Button_Click"
                Content="Cancelar" />
        </StackPanel>
    </Grid>
</Window>
