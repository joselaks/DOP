<Window
    x:Class="DOP.Presupuestos.Ventanas.WiTablero"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DOP.Presupuestos.Ventanas"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Width="1200"
    Height="800"
    MinWidth="800"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="CanResizeWithGrip"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">
    <Window.Resources />
    <Border
        x:Name="MainBorder"
        Margin="10"
        Background="#004482"
        BorderBrush="White"
        BorderThickness="2"
        CornerRadius="5">
        <Border.Effect>
            <DropShadowEffect
                x:Name="WindowShadow"
                BlurRadius="20"
                Opacity="0.5"
                ShadowDepth="0"
                Color="Black" />
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Encabezado personalizado  -->
            <Border
                Grid.Row="0"
                Background="#004482"
                BorderBrush="White"
                BorderThickness="0"
                CornerRadius="20,20,0,0"
                MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid>
                    <TextBlock
                        Padding="2"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Foreground="White"
                        Text="DataObra" />
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Button
                            Width="20"
                            Margin="3"
                            Click="Minimize_Click"
                            Content="_" />
                        <Button
                            Width="20"
                            Margin="3"
                            Click="Maximize_Click"
                            Content="□" />
                        <Button
                            Width="20"
                            Margin="3"
                            Click="Close_Click"
                            Content="X" />
                    </StackPanel>
                </Grid>
            </Border>
            <Grid
                Grid.Row="1"
                Margin="2,0,2,0"
                Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <syncfusion:TabNavigationControl
                    x:Name="zona00"
                    Margin="15"
                    TabStripVisibility="Visible">
                    <syncfusion:TabNavigationItem Header="Valor de m2 en modelos">
                        <syncfusion:TabNavigationItem.Content>
                            <Grid>
                                <syncfusion:SfChart x:Name="graficoBarras" />
                            </Grid>
                        </syncfusion:TabNavigationItem.Content>
                    </syncfusion:TabNavigationItem>
                </syncfusion:TabNavigationControl>

                <syncfusion:TabControlExt
                    Name="zona10"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="15"
                    TabItemSelectedForeground="Black" />

                <syncfusion:TabControlExt
                    Name="zona11"
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    Margin="15"
                    TabItemSelectedForeground="Black">
                    <syncfusion:TabItemExt Header="Mis presupuestos">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <StackPanel
                                Margin="0,0,0,0"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                                <Button
                                    Name="btnNuevo"
                                    Width="80"
                                    Margin="2"
                                    Click="BtnNuevo_Click"
                                    Content="Nuevo" />
                                <Button
                                    Name="btnEditar"
                                    Width="80"
                                    Margin="2"
                                    Click="btnEditar_Click"
                                    Content="Editar" />
                                <Button
                                    Name="btnBorrar"
                                    Width="80"
                                    Margin="2"
                                    Click="btnBorrar_Click"
                                    Content="Borrar" />
                            </StackPanel>
                            <Grid Grid.Row="2">
                                <syncfusion:SfDataGrid
                                    Name="GrillaPresupuestos"
                                    AllowResizingColumns="True"
                                    AutoGenerateColumns="False"
                                    IsReadOnly="True"
                                    MouseDoubleClick="GrillaPresupuestos_MouseDoubleClick">
                                    <syncfusion:SfDataGrid.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Click="MenuItem_Click" Header="Nuevo" />
                                            <MenuItem Click="MenuItem_Click" Header="Editar" />
                                            <MenuItem Click="MenuItem_Click" Header="Borrar" />
                                        </ContextMenu>
                                    </syncfusion:SfDataGrid.ContextMenu>
                                    <syncfusion:SfDataGrid.Columns>
                                        <syncfusion:GridTextColumn
                                            Width="50"
                                            HeaderText="ID"
                                            
                                            MappingName="ID" />
                                        <syncfusion:GridTextColumn
                                            Width="280"
                                            HeaderText="Descripción"
                                            MappingName="Descrip" />
                                        <syncfusion:GridNumericColumn
                                            Width="150"
                                            HeaderText="Importe"
                                            MappingName="PrEjecTotal"
                                            NumberDecimalDigits="2"
                                            NumberDecimalSeparator=","
                                            NumberGroupSeparator="."
                                            NumberGroupSizes="3"
                                            TextAlignment="Right" />
                                        <syncfusion:GridNumericColumn
                                            Width="120"
                                            HeaderText="Superficie"
                                            MappingName="Superficie"
                                            NumberDecimalDigits="2"
                                            NumberDecimalSeparator=","
                                            NumberGroupSeparator="."
                                            NumberGroupSizes="3"
                                            TextAlignment="Right" />
                                        <syncfusion:GridNumericColumn
                                            Width="120"
                                            HeaderText="Valor M2"
                                            MappingName="ValorM2"
                                            NumberDecimalDigits="2"
                                            NumberDecimalSeparator=","
                                            NumberGroupSeparator="."
                                            NumberGroupSizes="3"
                                            TextAlignment="Right" />
                                        <syncfusion:GridDateTimeColumn
                                            Width="120"
                                            HeaderText="Fecha creación"
                                            MappingName="FechaC"
                                            TextAlignment="Center" />
                                        <syncfusion:GridDateTimeColumn
                                            Width="120"
                                            HeaderText="Fecha modificación"
                                            MappingName="FechaM"
                                            TextAlignment="Right" />
                                        <syncfusion:GridDateTimeColumn
                                            Width="120"
                                            HeaderText="Mes base"
                                            MappingName="MesBase"
                                            Pattern="YearMonth"
                                            TextAlignment="Right" />

                                    </syncfusion:SfDataGrid.Columns>
                                </syncfusion:SfDataGrid>
                            </Grid>
                        </Grid>
                    </syncfusion:TabItemExt>
                </syncfusion:TabControlExt>
            </Grid>
            <StackPanel
                x:Name="barraEstado"
                Grid.Row="2"
                Height="30"
                Margin="5,0,5,5"
                Orientation="Horizontal">
                <TextBlock
                    x:Name="txtUsuario"
                    Margin="5,0,0,0"
                    VerticalAlignment="Center"
                    FontWeight="DemiBold"
                    Foreground="White" />
                <Button
                    x:Name="btnBackstage"
                    Margin="15,0,0,0"
                    Padding="10,2"
                    VerticalAlignment="Center"
                    Background="#003366"
                    BorderBrush="White"
                    BorderThickness="1"
                    Click="btnBackstage_Click"
                    Content="Backstage"
                    FontWeight="Bold"
                    Foreground="White"
                    Visibility="Collapsed" />
            </StackPanel>

        </Grid>
    </Border>
</Window>