<Window
    x:Class="DOP.Presupuestos.Ventanas.WiTablero"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DOP.Presupuestos.Ventanas"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Width="1200"
    Height="800"
    MinWidth="800"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="CanResizeWithGrip"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">
    <Window.Resources />
    <Border
        x:Name="MainBorder"
        Margin="10"
        Background="#004482"
        BorderBrush="White"
        BorderThickness="2"
        CornerRadius="5">
        <Border.Effect>
            <DropShadowEffect
                x:Name="WindowShadow"
                BlurRadius="20"
                Opacity="0.5"
                ShadowDepth="0"
                Color="Black" />
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Encabezado personalizado  -->
            <Border
                Grid.Row="0"
                Background="#004482"
                BorderBrush="White"
                BorderThickness="0"
                CornerRadius="20,20,0,0"
                MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid>
                    <TextBlock
                        Padding="2"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Foreground="White"
                        Text="DataObra" />
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Button
                            Width="20"
                            Margin="3"
                            Click="Minimize_Click"
                            Content="_" />
                        <Button
                            Width="20"
                            Margin="3"
                            Click="Maximize_Click"
                            Content="□" />
                        <Button
                            Width="20"
                            Margin="3"
                            Click="Close_Click"
                            Content="X" />
                    </StackPanel>
                </Grid>
            </Border>
            <Grid
                Grid.Row="1"
                Margin="2,0,2,0"
                Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>



                <syncfusion:TabNavigationControl
                    x:Name="zona00"
                    Margin="15"
                    TabStripVisibility="Visible">
                    <syncfusion:TabNavigationItem Header="Valor de m2 en modelos">
                        <syncfusion:TabNavigationItem.Content>
                            <Grid>
                                <syncfusion:SfChart x:Name="graficoBarras" />
                            </Grid>
                        </syncfusion:TabNavigationItem.Content>
                    </syncfusion:TabNavigationItem>

                </syncfusion:TabNavigationControl>

                <syncfusion:TabControlExt
                    Name="zona10"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="15"
                    TabItemSelectedForeground="Black" />

                <syncfusion:TabControlExt
                    Name="zona11"
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    Margin="15"
                    TabItemSelectedForeground="Black">
                    <syncfusion:TabItemExt Header="Mis presupuestos">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="2">
                                <syncfusion:SfDataGrid
                                    Name="GrillaPresupuestos"
                                    AutoGenerateColumns="False"
                                    AllowResizingColumns="True"
                                    IsReadOnly="True"
                                    MouseDoubleClick="GrillaPresupuestos_MouseDoubleClick">
                                    <syncfusion:SfDataGrid.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Click="MenuItem_Click" Header="Nuevo" />
                                            <MenuItem Click="MenuItem_Click" Header="Editar" />
                                            <MenuItem Click="MenuItem_Click" Header="Borrar" />
                                        </ContextMenu>
                                    </syncfusion:SfDataGrid.ContextMenu>
                                    <syncfusion:SfDataGrid.Columns>
                                        <syncfusion:GridTextColumn
                                            Width="50"
                                            HeaderText="ID"
                                            MappingName="ID" />
                                        <syncfusion:GridTextColumn
                                            Width="250"
                                            HeaderText="Descripción"
                                            MappingName="Descrip" />
                                        <syncfusion:GridDateTimeColumn
                                            Width="100"
                                            HeaderText="Fecha de creación"
                                            MappingName="FechaC"
                                            TextAlignment="Center" />
                                        <syncfusion:GridDateTimeColumn
                                            Width="100"
                                            HeaderText="Fecha de modificación"
                                            MappingName="FechaM"
                                            TextAlignment="Right" />
                                        <syncfusion:GridDateTimeColumn
                                            Width="100"
                                            HeaderText="Mes base"
                                            MappingName="MesBase"
                                            TextAlignment="Right" />
                                        <syncfusion:GridNumericColumn
                                            Width="200"
                                            HeaderText="Importe"
                                            MappingName="PrEjecTotal"
                                            TextAlignment="Right" />
                                        
                                    </syncfusion:SfDataGrid.Columns>
                                </syncfusion:SfDataGrid>

                            </Grid>

                        </Grid>
                    </syncfusion:TabItemExt>
                </syncfusion:TabControlExt>






            </Grid>

            <StackPanel
                Grid.Row="2"
                Height="30"
                Margin="5,0,5,5"
                Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="12"
                    Foreground="White"
                    Text="Uso del servidor: " />
                <syncfusion:SfLinearProgressBar
                    Width="400"
                    Height="20"
                    Margin="20,0,20,0"
                    Foreground="Green"
                    Maximum="100"
                    Minimum="0"
                    Progress="30" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="12"
                    Foreground="White"
                    Text="Lleva utilizado el 30% de la cuota mensual de uso del servidor" />

            </StackPanel>
        </Grid>
    </Border>
</Window>
