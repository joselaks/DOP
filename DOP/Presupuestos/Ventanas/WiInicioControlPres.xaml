    <Window x:Class="DataObra.Presupuestos.Ventanas.WiInicioControlPres"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataObra.Presupuestos.Ventanas"
        mc:Ignorable="d"
        Title="Control de Presupuestos"
        Height="480" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Presupuestos" FontSize="16" FontWeight="Bold" Margin="4"/>

        <DataGrid x:Name="GrillaPresupuestos"
                  Grid.Row="1"
                  ItemsSource="{Binding Presupuestos}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  Margin="0,8,0,8"
                  MouseDoubleClick="GrillaPresupuestos_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="60"/>
                <DataGridTextColumn Header="Descripción" Binding="{Binding Descrip}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button x:Name="BtnAbrir" Content="Abrir" Width="90" Margin="4" IsDefault="True" Click="BtnAbrir_Click"/>
            <Button x:Name="BtnCerrar" Content="Cerrar" Width="90" Margin="4" IsCancel="True" Click="BtnCerrar_Click"/>
        </StackPanel>
    </Grid>
</Window>
