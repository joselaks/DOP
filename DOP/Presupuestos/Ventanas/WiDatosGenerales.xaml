<Window
    x:Class="DataObra.Presupuestos.Ventanas.WiDatosGenerales"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Editar datos del presupuesto"
    Width="400"
    Height="200"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Margin="0,0,8,0"
            VerticalAlignment="Center"
            Text="Descripción:" />
        <TextBox
            Grid.Column="1"
            Width="220"
            Text="{Binding Descrip, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock
            Grid.Row="1"
            Margin="0,10,8,0"
            VerticalAlignment="Center"
            Text="Fecha base:" />
        <DatePicker
            Grid.Row="1"
            Grid.Column="1"
            Width="220"
            Margin="0,10,0,0"
            SelectedDate="{Binding MesBase, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <StackPanel
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Margin="0,20,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="80"
                Margin="0,0,10,0"
                Click="Aceptar_Click"
                Content="Aceptar"
                IsDefault="True" />
            <Button
                Width="80"
                Content="Cancelar"
                IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>