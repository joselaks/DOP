<syncfusion:RibbonWindow
    x:Class="DOP.Presupuestos.Ventanas.WiPresupuesto"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DOP.Presupuestos.Ventanas"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sfSkinManager="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Title="DataObra"
    Width="1800"
    Height="1000"
    sfSkinManager:SfSkinManager.VisualStyle="Office2016White"
    WindowStartupLocation="CenterScreen"
    WindowState="Normal"
    mc:Ignorable="d">
    <syncfusion:RibbonWindow.StatusBar>
        <syncfusion:RibbonStatusBar Background="#004482">
            <WrapPanel>
                <TextBlock
                    Margin="10,0,0,0"
                    Foreground="AntiqueWhite"
                    Text="Barra de estado" />
                <TextBlock
                    Margin="20,0,0,0"
                    Foreground="AntiqueWhite"
                    Text="....." />
            </WrapPanel>
        </syncfusion:RibbonStatusBar>
    </syncfusion:RibbonWindow.StatusBar>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <syncfusion:Ribbon
            x:Name="menuppal"
            VerticalAlignment="Top"
            BackStageHeader="CONFIG.">
            <syncfusion:Ribbon.BackStage>
                <syncfusion:Backstage>
                    <syncfusion:BackstageTabItem Header="Datos">
                        <StackPanel>
                            <TextBlock
                                Margin="10"
                                FontSize="20"
                                Text="Datos del presupuesto" />
                        </StackPanel>
                    </syncfusion:BackstageTabItem>
                    <syncfusion:BackstageTabItem Header="Indirectos">
                        <StackPanel>
                            <TextBlock
                                Margin="10"
                                FontSize="20"
                                Text="Coeficiente" />
                        </StackPanel>
                    </syncfusion:BackstageTabItem>
                    <syncfusion:BackstageTabItem Header="Divisas">
                        <StackPanel>
                            <TextBlock
                                Margin="10"
                                FontSize="20"
                                Text="Tipos de cambio" />
                        </StackPanel>
                    </syncfusion:BackstageTabItem>
                </syncfusion:Backstage>
            </syncfusion:Ribbon.BackStage>
            <syncfusion:RibbonTab Caption="INICIO" IsChecked="True">
                <syncfusion:RibbonBar
                    Name="New"
                    Header="Guardar"
                    IsLauncherButtonVisible="False">
                    <syncfusion:RibbonButton
                        Click="BtnGuardar_Click"
                        Label="Guardar"
                        LargeIcon="pack://application:,,,/Imagenes/Guardar48.png"
                        SizeForm="Large" />
                    <syncfusion:RibbonButton
                        x:Name="btnFiebdc"
                        Click="btnFiebdc_Click"
                        Label="Importar FIEBDC"
                        LargeIcon="pack://application:,,,/Imagenes/Importar.png"
                        SizeForm="Large" />
                </syncfusion:RibbonBar>
                <syncfusion:RibbonBar Name="Delete" Header="Agregar">
                    <syncfusion:RibbonButton
                        x:Name="Rubro"
                        Click="Agregar_Click"
                        Label="Rubro"
                        LargeIcon="pack://application:,,,/Imagenes/Rubro.png"
                        SizeForm="Large" />
                    <syncfusion:RibbonButton
                        x:Name="Tarea"
                        Click="Agregar_Click"
                        Label="Tarea"
                        LargeIcon="pack://application:,,,/Imagenes/Tarea.png"
                        SizeForm="Large" />
                </syncfusion:RibbonBar>
                <syncfusion:RibbonBar
                    Name="Presup"
                    Width="190"
                    Header="Varios">
                    <RadioButton
                        x:Name="rbSoloPlanilla"
                        Margin="5,0,5,0"
                        Click="PresupClick"
                        Content="Solo Planilla"
                        GroupName="ComboGroup"
                        IsChecked="False" />
                    <RadioButton
                        x:Name="rbPlanillaListado"
                        Margin="5,0,5,0"
                        Click="PresupClick"
                        Content="Presupuesto completo"
                        GroupName="ComboGroup"
                        IsChecked="False" />

                </syncfusion:RibbonBar>
                <syncfusion:RibbonBar
                    Name="Respond"
                    Width="190"
                    Header="Varios">
                    <syncfusion:RibbonButton
                        x:Name="Recalculo"
                        Click="Recalculo_Click"
                        Label="Recalculo"
                        SizeForm="Small"
                        SmallIcon="pack://application:,,,/Imagenes/Otros.png" />
                    <syncfusion:RibbonButton
                        x:Name="Recnumerar"
                        Click="Recnumerar_Click"
                        Label="Renumerar"
                        SizeForm="Small"
                        SmallIcon="pack://application:,,,/Imagenes/Tarea.png" />
                    <syncfusion:DropDownButtonAdv
                        x:Name="dropColumnas"
                        Width="100"
                        Label="Columnas"
                        SmallIcon="pack://application:,,,/Imagenes/Tarea.png"
                        StayDropDownOnClick="True"
                        ToolTip="Visualizar columnas">
                        <syncfusion:DropDownMenuGroup IsResizable="True">
                            <syncfusion:DropDownMenuItem
                                x:Name="colCodigo"
                                Padding="8,2"
                                Header="Código"
                                IsCheckable="True"
                                IsCheckedChanged="columnas_IsCheckedChanged" />
                            <syncfusion:DropDownMenuItem
                                x:Name="colTipo"
                                Header="Tipo"
                                IsCheckable="True"
                                IsCheckedChanged="columnas_IsCheckedChanged" />
                            <syncfusion:DropDownMenuItem
                                x:Name="colMat"
                                Header="Materiales"
                                IsCheckable="True"
                                IsCheckedChanged="columnas_IsCheckedChanged" />
                            <syncfusion:DropDownMenuItem
                                x:Name="colMDO"
                                Header="Mano de Obra"
                                IsCheckable="True"
                                IsCheckedChanged="columnas_IsCheckedChanged" />
                            <syncfusion:DropDownMenuItem
                                x:Name="colEqi"
                                Header="Equipos"
                                IsCheckable="True"
                                IsCheckedChanged="columnas_IsCheckedChanged" />
                            <syncfusion:DropDownMenuItem
                                x:Name="colSub"
                                Header="Subcontratos"
                                IsCheckable="True"
                                IsCheckedChanged="columnas_IsCheckedChanged" />
                            <syncfusion:DropDownMenuItem
                                x:Name="colOtr"
                                Header="Otros"
                                IsCheckable="True"
                                IsCheckedChanged="columnas_IsCheckedChanged" />
                        </syncfusion:DropDownMenuGroup>
                    </syncfusion:DropDownButtonAdv>

                    <syncfusion:RibbonButton
                        x:Name="Expandir"
                        Click="expandir_Click"
                        Label="Expandir"
                        SizeForm="Small" />

                    <syncfusion:RibbonButton
                        x:Name="Contraer"
                        Click="expandir_Click"
                        Label="Contraer"
                        SizeForm="Small" />





                </syncfusion:RibbonBar>
                <syncfusion:RibbonBar Header="Informes">
                    <syncfusion:RibbonButton
                        x:Name="SaleExcel"
                        Click="SaleExcel_Click"
                        Label="Excel"
                        SizeForm="Small"
                        SmallIcon="pack://application:,,,/Imagenes/Tarea.png" />
                </syncfusion:RibbonBar>
                <syncfusion:RibbonBar Width="120" Header="Detalle">
                    <syncfusion:RibbonCheckBox
                        x:Name="chkDetalle"
                        Width="140"
                        Checked="VentanaDetalle_Checked"
                        Content="Detalle"
                        IsChecked="false"
                        Unchecked="VentanaDetalle_Unchecked" />

                    <syncfusion:DropDownButtonAdv
                        x:Name="dropColumnasDetalle"
                        Width="100"
                        Label="Columnas"
                        SmallIcon="pack://application:,,,/Imagenes/Tarea.png"
                        StayDropDownOnClick="True"
                        ToolTip="Visualizar columnas">
                        <syncfusion:DropDownMenuGroup IsResizable="True">
                            <syncfusion:DropDownMenuItem
                                x:Name="colCodigoDetalle"
                                Padding="8,2"
                                Header="Código"
                                IsCheckable="True"
                                IsCheckedChanged="columnasDetalle_IsCheckedChanged" />
                            <syncfusion:DropDownMenuItem
                                x:Name="colTipoDetalle"
                                Header="Tipo"
                                IsCheckable="True"
                                IsCheckedChanged="columnasDetalle_IsCheckedChanged" />
                            <syncfusion:DropDownMenuItem
                                x:Name="colMatDetalle"
                                Header="Materiales"
                                IsCheckable="True"
                                IsCheckedChanged="columnasDetalle_IsCheckedChanged" />
                            <syncfusion:DropDownMenuItem
                                x:Name="colMDODetalle"
                                Header="Mano de Obra"
                                IsCheckable="True"
                                IsCheckedChanged="columnasDetalle_IsCheckedChanged" />
                            <syncfusion:DropDownMenuItem
                                x:Name="colEqiDetalle"
                                Header="Equipos"
                                IsCheckable="True"
                                IsCheckedChanged="columnasDetalle_IsCheckedChanged" />
                            <syncfusion:DropDownMenuItem
                                x:Name="colSubDetalle"
                                Header="Subcontratos"
                                IsCheckable="True"
                                IsCheckedChanged="columnasDetalle_IsCheckedChanged" />
                            <syncfusion:DropDownMenuItem
                                x:Name="colOtrDetalle"
                                Header="Otros"
                                IsCheckable="True"
                                IsCheckedChanged="columnasDetalle_IsCheckedChanged" />
                        </syncfusion:DropDownMenuGroup>
                    </syncfusion:DropDownButtonAdv>
                </syncfusion:RibbonBar>

                <syncfusion:RibbonBar Header="Ventanas">

                    <syncfusion:RibbonCheckBox
                        x:Name="chkListados"
                        Width="140"
                        Checked="VentanasLaterales_Checked"
                        Content="Listados"
                        IsChecked="false"
                        Unchecked="VentanasLaterales_Unchecked" />
                    <syncfusion:RibbonCheckBox
                        x:Name="chkMaestro"
                        Width="140"
                        Checked="VentanasLaterales_Checked"
                        Content="Maestro"
                        IsChecked="false"
                        Unchecked="VentanasLaterales_Unchecked" />

                    <syncfusion:RibbonCheckBox
                        x:Name="chkPrecios"
                        Width="140"
                        Checked="VentanasLaterales_Checked"
                        Content="Precios"
                        IsChecked="false"
                        Unchecked="VentanasLaterales_Unchecked" />


                </syncfusion:RibbonBar>

                <syncfusion:RibbonBar Header="Combos">
                    <RadioButton
                        x:Name="rbPlanilla"
                        Margin="5,0,5,0"
                        Click="Combo_Click"
                        Content="Solo Planilla"
                        GroupName="ComboGroup"
                        IsChecked="False" />
                    <RadioButton
                        x:Name="rbPresupuesto"
                        Margin="5,0,5,0"
                        Click="Combo_Click"
                        Content="Presupuesto completo"
                        GroupName="ComboGroup"
                        IsChecked="False" />
                    <RadioButton
                        x:Name="rbMaestro"
                        Margin="5,0,5,0"
                        Click="Combo_Click"
                        Content="Presupuesto y Maestro"
                        GroupName="ComboGroup"
                        IsChecked="False" />

                </syncfusion:RibbonBar>

                <syncfusion:RibbonBar Header="Filtros">
                    <syncfusion:RibbonButton
                        x:Name="gArbol"
                        Click="gArbol_Click"
                        Label="Arbol"
                        SizeForm="Small"
                        SmallIcon="pack://application:,,,/Imagenes/Tarea.png" />

                    <syncfusion:RibbonButton
                        x:Name="gFiltrado"
                        Click="gArbol_Click"
                        Label="Filtrado"
                        SizeForm="Small"
                        SmallIcon="pack://application:,,,/Imagenes/Tarea.png" />




                </syncfusion:RibbonBar>



            </syncfusion:RibbonTab>


            <syncfusion:RibbonTab Caption="REPORTES" IsChecked="False" />
        </syncfusion:Ribbon>

        <Grid x:Name="basePres" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="0" />
                <RowDefinition Height="0" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="0" />
                <ColumnDefinition Width="0" />
                <ColumnDefinition Width="0" />
                <ColumnDefinition Width="0" />
                <ColumnDefinition Width="0" />
                <ColumnDefinition Width="0" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0" Grid.Column="0"  x:Name="gPlanilla">
                

            </Grid>

            <syncfusion:SfGridSplitter
                x:Name="sepDetalle"
                Grid.Row="1"
                Grid.Column="0"
                Height="5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                EnableCollapseButton="True"
                ResizeBehavior="PreviousAndNext"
                ShowsPreview="True" />

            <Grid x:Name="panelDetalle" Grid.Row="2" />

            <!--  Laterales  -->

            <syncfusion:SfGridSplitter
                x:Name="sepListado"
                Grid.RowSpan="3"
                Grid.Column="1"
                Width="5"
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch"
                EnableCollapseButton="True"
                ResizeBehavior="PreviousAndNext"
                ShowsPreview="True" />

            <Grid
                x:Name="panelListado"
                Grid.RowSpan="3"
                Grid.Column="2" />



            <syncfusion:SfGridSplitter
                x:Name="sepMaestro"
                Grid.RowSpan="3"
                Grid.Column="3"
                Width="5"
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch"
                EnableCollapseButton="True"
                ResizeBehavior="PreviousAndNext"
                ShowsPreview="True" />

            <Grid
                x:Name="panelMaestro"
                Grid.RowSpan="3"
                Grid.Column="4" />


            <syncfusion:SfGridSplitter
                x:Name="sepPrecios"
                Grid.RowSpan="3"
                Grid.Column="5"
                Width="5"
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch"
                EnableCollapseButton="True"
                ResizeBehavior="PreviousAndNext"
                ShowsPreview="True" />

            <Grid
                x:Name="panelPrecios"
                Grid.RowSpan="3"
                Grid.Column="6" />

        </Grid>




    </Grid>
</syncfusion:RibbonWindow>
