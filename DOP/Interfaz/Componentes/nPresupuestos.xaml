<UserControl
    x:Class="DataObra.Interfaz.Componentes.nPresupuestos"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="10,10,10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="pack://application:,,,/Imagenes/Material.png" Width="28" Height="28" Margin="0,0,8,0"/>
                <TextBlock Text="Presupuestos"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#1E88E5"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="1" Margin="25">
            <TextBlock Text="Últimos presupuestos editados por el usuario"
                       FontWeight="Bold"
                       FontSize="16"
                       Margin="0,0,0,8"/>
            <ListBox
                x:Name="lstUltimosPresupuestos"
                SelectedIndex="-1">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Descrip}" FontWeight="Bold" Width="250"/>
                            <TextBlock Text="{Binding FechaM, StringFormat=' - {0:dd/MM/yyyy}'}" Width="150"/>
                            <TextBlock Text="{Binding PrEjecTotal, StringFormat=' - Total: {0:C2}'}" Width="150"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <TextBlock x:Name="txtNoPresupuestos"
                       Text="No hay presupuestos editados por el usuario"
                       Foreground="Gray"
                       FontStyle="Italic"
                       Margin="0,8,0,0"
                       HorizontalAlignment="Left"
                       Visibility="Collapsed"/>
        </StackPanel>

        <Button
            Grid.Row="2"
            Width="200"
            Height="20"
            Click="Button_Click"
            Content="Ver Presupuestos" />
    </Grid>
</UserControl>