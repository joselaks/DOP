<UserControl
    x:Class="DataObra.Interfaz.Componentes.nPresupuestos"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="10,10,10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel
                Grid.Column="1"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Image
                    Width="28"
                    Height="28"
                    Margin="0,0,8,0"
                    Source="pack://application:,,,/Imagenes/Material.png" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="22"
                    FontWeight="Bold"
                    Foreground="#1E88E5"
                    Text="Presupuestos" />
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="1" Margin="25">
            <TextBlock
                Margin="0,0,0,8"
                FontSize="16"
                FontWeight="Bold"
                Text="Últimos presupuestos editados por el usuario" />
            <ListBox x:Name="lstUltimosPresupuestos" SelectedIndex="-1">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Width="250"
                                FontWeight="Bold"
                                Text="{Binding Descrip}" />
                            <TextBlock Width="150" Text="{Binding FechaM, StringFormat=' - {0:dd/MM/yyyy}'}" />
                            <TextBlock Width="150" Text="{Binding PrEjecTotal, StringFormat=' - Total: {0:C2}'}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <TextBlock
                x:Name="txtNoPresupuestos"
                Margin="0,8,0,0"
                HorizontalAlignment="Left"
                FontStyle="Italic"
                Foreground="Gray"
                Text="No hay presupuestos editados por el usuario"
                Visibility="Collapsed" />
        </StackPanel>

        <Button
            Grid.Row="2"
            Width="200"
            Height="20"
            Click="Button_Click"
            Content="Ver Presupuestos" />
    </Grid>
</UserControl>