<UserControl
    x:Class="DataObra.Interfaz.Componentes.nPresupuestos"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Últimos presupuestos editados por el usuario"
                       FontWeight="Bold"
                       FontSize="16"
                       Margin="0,0,0,8"/>
            <ListBox
                x:Name="lstUltimosPresupuestos"
                SelectedIndex="-1">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Descrip}" FontWeight="Bold" Width="250"/>
                            <TextBlock Text="{Binding FechaM, StringFormat=' - {0:dd/MM/yyyy}'}" Width="150"/>
                            <TextBlock Text="{Binding PrEjecTotal, StringFormat=' - Total: {0:C2}'}" Width="150"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <TextBlock x:Name="txtNoPresupuestos"
                       Text="No hay presupuestos editados por el usuario"
                       Foreground="Gray"
                       FontStyle="Italic"
                       Margin="0,8,0,0"
                       HorizontalAlignment="Left"
                       Visibility="Collapsed"/>
        </StackPanel>

        <Button
            Grid.Row="1"
            Width="200"
            Height="20"
            Click="Button_Click"
            Content="Ver Presupuestos" />
    </Grid>
</UserControl>