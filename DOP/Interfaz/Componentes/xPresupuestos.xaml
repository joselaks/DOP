<UserControl
    x:Class="DataObra.Interfaz.Componentes.xPresupuestos"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sfSkinManager="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    sfSkinManager:SfSkinManager.VisualStyle="MaterialLight"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="RedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#D32F2F" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#B71C1C" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="6,2" />
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="2"
                            SnapsToDevicePixels="True">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                RecognizesAccessKey="True" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#C62828" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E57373" />
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E57373" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.6" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Image
                Width="28"
                Height="28"
                Margin="0,0,8,0"
                Source="pack://application:,,,/Imagenes/Material.png" />
            <TextBlock
                VerticalAlignment="Center"
                FontSize="22"
                FontWeight="Bold"
                Foreground="#1E88E5"
                Text="Presupuestos" />
        </StackPanel>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel
                Margin="0,0,0,0"
                HorizontalAlignment="Left"
                Orientation="Horizontal">
                <Button
                    Name="btnNuevo"
                    Width="80"
                    Margin="2"
                    Click="BtnNuevo_Click"
                    Content="Nuevo" />
                <Button
                    Name="btnEditar"
                    Width="80"
                    Margin="2"
                    Click="btnEditar_Click"
                    Content="Editar" />
                <Button
                    Name="btnBorrar"
                    Width="80"
                    Margin="2"
                    Click="btnBorrar_Click"
                    Content="Borrar" />
                <Button
                    Name="btnControl"
                    Width="80"
                    Margin="20,2,2,2"
                    Click="btnControl_Click"
                    Content="Control"
                    Style="{StaticResource RedButtonStyle}" />
            </StackPanel>
            <Grid Grid.Row="2">
                <syncfusion:SfDataGrid
                    Name="GrillaPresupuestos"
                    AllowResizingColumns="True"
                    AutoGenerateColumns="False"
                    IsReadOnly="True"
                    MouseDoubleClick="GrillaPresupuestos_MouseDoubleClick">
                    <syncfusion:SfDataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Click="MenuItem_Click" Header="Nuevo" />
                            <MenuItem Click="MenuItem_Click" Header="Editar" />
                            <MenuItem Click="MenuItem_Click" Header="Borrar" />
                        </ContextMenu>
                    </syncfusion:SfDataGrid.ContextMenu>
                    <syncfusion:SfDataGrid.Columns>
                        <syncfusion:GridTextColumn
                            Width="50"
                            HeaderText="ID"
                            MappingName="ID" />
                        <syncfusion:GridTextColumn
                            Width="280"
                            HeaderText="Descripción"
                            MappingName="Descrip" />
                        <syncfusion:GridNumericColumn
                            Width="150"
                            HeaderText="Importe"
                            MappingName="PrEjecTotal"
                            NumberDecimalDigits="2"
                            NumberDecimalSeparator=","
                            NumberGroupSeparator="."
                            NumberGroupSizes="3"
                            TextAlignment="Right" />
                        <syncfusion:GridNumericColumn
                            Width="120"
                            HeaderText="Superficie"
                            MappingName="Superficie"
                            NumberDecimalDigits="2"
                            NumberDecimalSeparator=","
                            NumberGroupSeparator="."
                            NumberGroupSizes="3"
                            TextAlignment="Right" />
                        <syncfusion:GridNumericColumn
                            Width="120"
                            HeaderText="Valor M2"
                            MappingName="ValorM2"
                            NumberDecimalDigits="2"
                            NumberDecimalSeparator=","
                            NumberGroupSeparator="."
                            NumberGroupSizes="3"
                            TextAlignment="Right" />
                        <syncfusion:GridDateTimeColumn
                            Width="120"
                            HeaderText="Fecha creación"
                            MappingName="FechaC"
                            TextAlignment="Center" />
                        <syncfusion:GridDateTimeColumn
                            Width="120"
                            HeaderText="Fecha modificación"
                            MappingName="FechaM"
                            TextAlignment="Right" />
                        <syncfusion:GridDateTimeColumn
                            Width="120"
                            HeaderText="Mes base"
                            MappingName="MesBase"
                            Pattern="YearMonth"
                            TextAlignment="Right" />
                        <syncfusion:GridNumericColumn
                            Width="150"
                            HeaderText="Gastos"
                            MappingName="Gastos"
                            NumberDecimalDigits="2"
                            NumberDecimalSeparator=","
                            NumberGroupSeparator="."
                            NumberGroupSizes="3"
                            TextAlignment="Right" />
                        <!--<syncfusion:GridCheckBoxColumn HeaderText="Modelo" MappingName="EsModelo" />-->
                    </syncfusion:SfDataGrid.Columns>
                </syncfusion:SfDataGrid>
            </Grid>
        </Grid>

        <!--  Aquí puedes agregar el contenido expandido de Presupuestos  -->
    </Grid>
</UserControl>