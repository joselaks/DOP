<UserControl
    x:Class="DataObra.Interfaz.Componentes.nModelos"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DataObra.Interfaz.Componentes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sfSkinManager="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    sfSkinManager:SfSkinManager.VisualStyle="Office2016White"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>

        <!--  Título destacado  -->
        <Grid Grid.Row="0" Margin="10,10,10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel
                Grid.Column="1"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Image
                    Width="28"
                    Height="28"
                    Margin="0,0,8,0"
                    Source="pack://application:,,,/Imagenes/Material.png" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="22"
                    FontWeight="Bold"
                    Foreground="#FB8C00"
                    Text="Modelos" />
            </StackPanel>
        </Grid>

        <!--  Contenido principal existente  -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>

            <syncfusion:TabNavigationControl
                x:Name="zona00"
                Margin="15"
                TabStripVisibility="Visible">
                <syncfusion:TabNavigationItem Header="Valor de m2 en modelos de DataObra">
                    <syncfusion:TabNavigationItem.Content>
                        <Grid>
                            <syncfusion:SfChart x:Name="graficoBarras" Margin="20,2,20,0" />
                        </Grid>
                    </syncfusion:TabNavigationItem.Content>
                </syncfusion:TabNavigationItem>
                <syncfusion:TabNavigationItem Header="Valor de m2 en modelos propios">
                    <syncfusion:TabNavigationItem.Content>
                        <Grid>
                            <syncfusion:SfChart x:Name="graficoModelosPropios" />
                        </Grid>
                    </syncfusion:TabNavigationItem.Content>
                </syncfusion:TabNavigationItem>
            </syncfusion:TabNavigationControl>
        </Grid>

        <Button
            Grid.Row="2"
            Width="200"
            Height="20"
            Click="Button_Click"
            Content="Ver Modelos" />
    </Grid>
</UserControl>
