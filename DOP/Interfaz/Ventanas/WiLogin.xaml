<Window
    x:Class="DOP.Interfaz.Ventanas.WiLogin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DOP.Interfaz.Ventanas"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Width="600"
    Height="380"
    WindowStyle="None"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Encabezado  -->
        <TextBlock
            Margin="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="33"
            FontWeight="Black"
            Foreground="Orange"
            Text="DataObra Presupuestos" />

        <!--  Contenido Principal  -->
        <Grid
            Name="MainContent"
            Grid.Row="1"
            Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="20" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!--  Sección de Inicio de Sesión  -->

            <syncfusion:SfBusyIndicator
                x:Name="esperaLogin"
                Grid.Column="1"
                IsBusy="False">
                <StackPanel
                    Name="LoginSection"
                    Grid.Column="1"
                    Margin="10,10,10,10"
                    Background="#F0F0F0">
                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="20"
                        Text="Iniciar Sesión" />
                    <TextBlock
                        Margin="2,0,0,2"
                        FontSize="15"
                        Text="Usuario:" />
                    <TextBox
                        Name="txtUsuario"
                        Height="20"
                        Margin="0,0,0,10"
                        GotFocus="TextBox_GotFocus"
                        LostFocus="TextBox_LostFocus" />
                    <TextBlock
                        Margin="2,0,0,2"
                        FontSize="15"
                        Text="Contraseña:" />
                    <PasswordBox
                        Name="txtContraseña"
                        Height="20"
                        Margin="0,0,0,10"
                        GotFocus="PasswordBox_GotFocus"
                        LostFocus="PasswordBox_LostFocus" />
                    <Button
                        Height="20"
                        Background="#007ACC"
                        Click="VerificaUsuario_Click"
                        Content="Acceder como Usuario"
                        Foreground="White" />
                    <TextBlock
                        x:Name="texalta"
                        Width="178"
                        Margin="0,20,0,5"
                        HorizontalAlignment="Center"
                        Text="Si todavía no sos usuario, crea tu cuenta gratuita aquí"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                    <Button
                        Height="20"
                        Background="#007ACC"
                        Content="Alta de nuevo Usuario"
                        Foreground="White" />



                </StackPanel>
            </syncfusion:SfBusyIndicator>
            <Button
                x:Name="bSalir"
                Grid.Row="1"
                Grid.Column="1"
                Width="100"
                Background="#007ACC"
                Click="bSalir_Click"
                Content="Salir"
                Foreground="White" />

            <!--  Sección de Novedades  -->
            <StackPanel
                Name="NewsSection"
                Grid.RowSpan="2"
                Grid.Column="0"
                Margin="10,10,10,0"
                Background="#F0F0F0">
                <TextBlock
                    Margin="5,0,5,10"
                    FontSize="20"
                    Text="Novedades de la Construcción" />

                <TextBlock
                    Margin="5,0,5,5"
                    Text="Edificación modular: La construcción fuera del sitio está ganando popularidad."
                    TextWrapping="Wrap" />
                <TextBlock
                    Margin="5,0,5,5"
                    Text="Ver mas...."
                    TextWrapping="Wrap" />

                <TextBlock
                    Margin="5,10,5,10"
                    FontSize="20"
                    Text="Novedades del Software" />
                <TextBlock
                    Margin="5,0,5,5"
                    Text="Actualización de seguridad: Nueva versión con mejoras en la seguridad de datos."
                    TextWrapping="Wrap" />
                <TextBlock
                    Margin="5,0,5,5"
                    Text="Ver mas...."
                    TextWrapping="Wrap" />

            </StackPanel>
        </Grid>
    </Grid>

</Window>