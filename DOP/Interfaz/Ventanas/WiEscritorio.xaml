<Window
    x:Class="DataObra.Interfaz.Ventanas.WiEscritorio"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DataObra.Interfaz.Ventanas"
    xmlns:sfSkinManager="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Title="DataObra"
    Width="1200"
    Height="800"
    MinWidth="800"
    mc:Ignorable="d"
     sfSkinManager:SfSkinManager.VisualStyle="Office2016White">
    <Window.Resources>
        <DataTemplate x:Key="headerTemplate">
            <Grid>
                <TextBlock HorizontalAlignment="Center"
                       Text="{Binding}" 
                       FontFamily="Verdana"
                           FontWeight="DemiBold"
                          FontSize="20"></TextBlock>
            </Grid>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <syncfusion:TileViewControl
            x:Name="tSelector"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            MaximizedItemChanged="tileView_MaximizedItemChanged"
            MinimizedItemsOrientation="Left">
            <syncfusion:TileViewItem
                x:Name="tPresupuestos"
                Header="Mis Presupuestos"
                 HeaderTemplate="{StaticResource headerTemplate }"
                 />
            <syncfusion:TileViewItem x:Name="tModelos"  />
            <syncfusion:TileViewItem x:Name="tModelo"  />
            <syncfusion:TileViewItem x:Name="tPrecios"  />
        </syncfusion:TileViewControl>
    </Grid>
</Window>
