<Window
    x:Class="InstaladorDataObra.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:InstaladorDataObra"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Instalador DataObra"
    Width="280"
    Height="335"
    mc:Ignorable="d">
    <Grid Margin="0,0,0,94">
        <Button
            x:Name="instalaNET"
            Margin="82,59,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="instalaNET_Click"
            Content="Verifica e instala .NET9" />
        <Button
            x:Name="InstalaDO"
            Width="123"
            Margin="82,104,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="InstalaDO_Click"
            Content="Instala DataObra" />
        <ProgressBar
            x:Name="progressBar"
            Width="200"
            Height="20"
            Margin="40,160,40,0"
            VerticalAlignment="Top"
            Maximum="100"
            Minimum="0"
            Value="0" />

    </Grid>
</Window>
