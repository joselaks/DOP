<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gestion"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf" x:Class="Gestion.Base"
        mc:Ignorable="d"
        Title="Gestión" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <syncfusion:ToolBarAdv Height="30" Grid.Row="0">
            <Button Content="Nuevo" Height="26" Width="60"/>
            <Button Content="Abrir" Height="26" Width="60"/>
            <Button Content="Borrar" Height="26" Width="60"/>
        </syncfusion:ToolBarAdv>

    </Grid>
</Window>
